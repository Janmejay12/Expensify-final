<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Now"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:layout_margin="50dp"
        android:gravity="center"
        android:textStyle="bold"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        android:hint="Enter Email:"
        android:layout_below="@+id/heading"
        android:layout_margin="15dp"
        android:padding="20dp"
        android:textSize="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:hint="Enter Password:"
        android:layout_below="@+id/email"
        android:layout_margin="15dp"
        android:padding="20dp"
        android:textSize="20dp"
        android:background="#25ffffff"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="15dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:text="Login"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:backgroundTint="#3b309c"
        app:cornerRadius="15dp"
        />

    <TextView
        android:id="@+id/textsignin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="To create a new account,"

        android:textColor="@color/white"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textsignin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textsignin1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/textsignin1"
        android:gravity="center"
        android:text=" Sign Up. "
        android:textColor="#b7cf34"
        android:textSize="22dp" />


</RelativeLayout>